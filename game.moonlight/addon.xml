<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="game.moonlight"
  version="1.0.0"
  name="Moonlight Client"
  provider-name="acmiyaguchi">
  <requires>
    <import addon="kodi.game" version="1.0.12"/>
  </requires>
  <extension point="kodi.gameclient"
    library_android="game.moonlight.so"
    library_linux="game.moonlight.so"
    library_osx="game.moonlight.dylib"
    library_windx="game.moonlight.dll"
    library_wingl="game.moonlight.dll">
    <platforms></platforms>
    <extensions></extensions>
    <supports_vfs>true</supports_vfs>
    <supports_no_game>true</supports_no_game>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Kodi Moonlight Client</summary>
    <description lang="en">Moonlight Client for Kodi.</description>
    <platform>all</platform>
    <noicon>false</noicon>
    <nofanart>true</nofanart>
  </extension>
</addon>
